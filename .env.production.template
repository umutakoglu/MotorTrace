# Production Environment Configuration for app.umutakoglu.com
# Copy this file to .env.production and fill in the values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=mysql
DB_USER=motortrace_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_456!
DB_NAME=motortrace

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRES_IN=7d

# ============================================
# URL CONFIGURATION
# ============================================
FRONTEND_URL=https://app.umutakoglu.com
API_URL=https://app.umutakoglu.com/api

# ============================================
# PORT CONFIGURATION
# ============================================
BACKEND_PORT=5000
FRONTEND_PORT=80
MYSQL_PORT=3306

# ============================================
# CLOUDFLARE SETTINGS
# ============================================
# Cloudflare will handle SSL termination
# Backend will use HTTP only
USE_HTTPS=false
TRUST_PROXY=true
