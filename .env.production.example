# Production Environment Configuration
# ⚠️ IMPORTANT: Keep this file secure and never commit real credentials to Git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=mysql
DB_USER=motortrace_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_456!
DB_NAME=motortrace

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS_LONG
JWT_EXPIRES_IN=7d

# ============================================
# URL CONFIGURATION
# ============================================
# Replace with your actual domain
FRONTEND_URL=https://yourdomain.com
API_URL=https://yourdomain.com/api

# ============================================
# PORT CONFIGURATION (Optional)
# ============================================
BACKEND_PORT=5001
FRONTEND_PORT=80
MYSQL_PORT=3306

# ============================================
# SECURITY SETTINGS
# ============================================
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_FILE_SIZE=10485760
# 10MB in bytes

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Daily at 2 AM

# ============================================
# MONITORING (Optional)
# ============================================
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=info
